<?xml version="1.0" encoding="utf-8" ?>
<manifest xmlns="http://schemas.microsoft.com/wlw/manifest/weblog">
	<options>
		<clientType>Metaweblog API</clientType>
		<supportsKeywords>Yes</supportsKeywords>
		<supportsGetTags>Yes</supportsGetTags>
	</options>
	<weblog>
		<serviceName>Emlog</serviceName>
		<homepageLinkText>查看网站</homepageLinkText>
		<adminLinkText>后台管理</adminLinkText>
		<adminUrl>
			<![CDATA[ 
				{blog-postapi-url}/../admin/ 
			]]>
		</adminUrl>
		<postEditingUrl>
			<![CDATA[ 
				{blog-postapi-url}/../admin/write_log.php?action=edit&gid={post-id} 
			]]>
		</postEditingUrl>
	</weblog>
  <buttons>
	<button>
		<id>0</id>
		<text>编辑评论</text>
		<clickUrl>
			<![CDATA[ 
				{blog-postapi-url}/../admin/comment.php
			]]>
		</clickUrl>
	</button>
  </buttons>
</manifest>